<Window x:Class="StackExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stack Example" Height="350" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Введите число N:" Margin="5"/>
            <TextBox x:Name="txtN" Margin="5" Width="100"/>
            <Button Content="Ввести числа" Margin="5" Click="OnEnterNumbersClick"/>
            <TextBlock x:Name="txtResult" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
